<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @book do |f| %>
<% if flash[:notice] %>
 <div class="alert alert-success" role="alert">
 <p class="notice text-center" style="color:green;"><%= flash[:notice] %></p></div>
<% end %>
 <div class ="field">
 <h4>Title</h4>
 <%= f.text_field :title %>
 </div>
 <div class="field">
 <h4>Body</h4>
 <%= f.text_area :body %>
 </div>
 <div class="actions">
 <%= f.submit 'Update Book' %>
 </div>

 <span><%= link_to 'Show', book_path(@book.id) %></span>
 |
 <span><%= link_to 'Back', books_path %></span>
<% end %>
